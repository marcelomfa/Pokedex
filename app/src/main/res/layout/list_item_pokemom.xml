<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivPokemomImage"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvPokemomName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginStart="8dp"
        android:text="Picacku"
        android:textSize="18sp"
        android:textColor="@color/pokemomName"
        app:layout_constraintBottom_toTopOf="@+id/tvPokemomNumber"
        app:layout_constraintStart_toEndOf="@+id/ivPokemomImage"
        app:layout_constraintTop_toTopOf="@+id/ivPokemomImage" />

    <TextView
        android:id="@+id/tvPokemomNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="#025"
        android:textColor="@color/pokemomTag"
        app:layout_constraintBottom_toBottomOf="@+id/ivPokemomImage"
        app:layout_constraintStart_toStartOf="@+id/tvPokemomName"
        app:layout_constraintTop_toBottomOf="@+id/tvPokemomName" />
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#EBEBEB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/ivPokemomImage"/>


</androidx.constraintlayout.widget.ConstraintLayout>